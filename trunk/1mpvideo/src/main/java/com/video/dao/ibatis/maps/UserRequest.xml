<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="UserRequest">
	<typeAlias alias="UserRequest" type="com.video.domain.UserRequest" />
	<resultMap id="UserRequest" class="UserRequest">
		<result property="id" column="id" />
		<result property="rUser.id" column="ruser_id" />
		<result property="user.id" column="user_id" />
		<result property="word" column="word" />
		<result property="addDate" column="add_date" />

	</resultMap>
	<resultMap id="UserRequestJoin" class="UserRequest">
		<result property="id" column="r.id" />
		<result property="user.id" column="r.user_id" />
		<result property="rUser.id" column="u.id" />
		<result property="rUser.realName" column="u.realname" />
		<result property="rUser.face" column="u.face" />
		<result property="word" column="r.word" />
		<result property="addDate" column="r.add_date" />
	</resultMap>
	
	<select id="countUserRequestsByUserId" parameterClass="java.lang.Long" resultClass="int">
	select count(r.id) from w_user_requests r left join users  u on r.ruser_id = u.id where r.user_id=#value#
	
	</select>
	
	<select id="getUserRequestsByUserId" parameterClass="java.lang.Long" resultMap="UserRequestJoin">
	select r.id,r.user_id,u.id,u.realname,u.face,r.word,r.add_date from w_user_requests r left join users  u on r.ruser_id = u.id where r.user_id=#value#
	
	</select>
	
	<select id="getUserRequest" parameterClass="UserRequest" resultMap="UserRequest">
	select id,user_id,ruser_id,word,add_date from w_user_requests where user_id = #user.id# AND ruser_id = #rUser.id#
	</select>
	
	<delete id="deleteUserRequest" parameterClass="java.lang.Long">
	delete from w_user_requests where id = #value#
	</delete>
	
	<insert id="createUserRequest" parameterClass="UserRequest">
		insert into w_user_requests(user_id,ruser_id,word,add_date) values(#user.id#,#rUser.id#,#word#,#addDate#)
	</insert>
	<insert id="updateUserRequest" parameterClass="UserRequest">
		update w_user_requests set user_id=#user.id#,ruser_id=#rUser.id#,word=#word#,add_date=#addDate# where id = #id#
	</insert>
	
	



</sqlMap>