<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="Tag">
	<typeAlias alias="Tag" type="com.video.domain.Tag" />
	<typeAlias alias="TagStrongUser"
		type="com.video.domain.TagStrongUser" />
	<resultMap id="Tag" class="Tag">
		<result property="id" column="id" />
		<result property="description" column="description" />
		<result property="browseCount" column="browsecount" />
		<result property="createDate" column="createdate" />
		<result property="status" column="status" />
		<result property="name" column="name" />
	</resultMap>
	<typeAlias alias="User" type="com.video.domain.User" />
	<resultMap id="User" class="User">
		<result property="id" column="id" />
		<result property="userName" column="username" />
		<result property="face" column="face" />
	</resultMap>
	<resultMap class="TagStrongUser" id="TagStrongUser">
		<result property="countTag" column="counttag" />
		<result property="user" column="user_id"
			select="getTagStrongUserById" />
	</resultMap>

	<resultMap class="com.video.domain.Video" id="Video">
		<result property="id" column="id" />
		<result property="name" column="name" />
	</resultMap>
	<select id="getTagStrongUserById" parameterClass="java.lang.Long"
		resultMap="User">
		select id, username, face from users where id = #id#
	</select>
	<delete id="deleteTag" parameterClass="java.lang.Long">
		delete from w_tags where id = #id#
	</delete>

	<insert id="createTag" parameterClass="Tag">
		insert into
		w_tags(name,description,browsecount,status,user_id,createdate)
		values(#name#,#description#,#browseCount#,#status#,#user.id#,#createDate#)
		<selectKey keyProperty="id">select last_insert_id()</selectKey>
	</insert>
	<update id="updateTag" parameterClass="Tag">
		update w_tags set
		name=#name#,description=#description#,browseCount=#browseCount#,status=#status#,createdate=#createDate#
		where id = #id#
	</update>
	<select id="getTags" parameterClass="com.video.util.Pagination"
		resultClass="Tag">
		select id,name,description,browsecount,createdate,status from
		w_tags where status != 3
		<isNotEmpty property="condition.user.id" prepend="and">
			user_id = #condition.user.id#
		</isNotEmpty>
		<isNotEmpty prepend="order by" property="orderFieldName">
			$orderFieldName$
		</isNotEmpty>
		<isEqual compareValue="true" property="desc">desc</isEqual>
		limit #startIndex#,#size#
	</select>
	
	<select id="getTagsByVideo" parameterClass="java.lang.Long" resultClass="Tag">
	select t.id id,t.name name,t.description  description,t.browsecount browsecount,t.createdate createdate,t.status status 
	 from w_video_tag vt left join w_tags t on vt.tag_id = t.id where vt.video_id = #value# 
	</select>

	<select id="countTag" resultClass="int"
		parameterClass="com.video.util.Pagination">
		select count(*) from w_tags where status != 3
		<isNotEmpty property="condition.user.id" prepend="and">
			user_id = #condition.user.id#
		</isNotEmpty>
	</select>

	<select id="getLikeVideoTag" parameterClass="java.lang.Integer"
		resultMap="Tag">
		select id,name,description,browsecount,status,createdate from
		w_tags order by rand() limit 0,#size#;
	</select>

	<select id="getTagById" parameterClass="java.lang.Long"
		resultClass="Tag">
		select id,name,description,browsecount,status,createdate from
		w_tags where id = #id#
	</select>


	<select id="getTagByName" parameterClass="java.lang.String"
		resultClass="Tag">
		select id,name,description,browsecount,status,createdate from
		w_tags where name = #name#
	</select>

	<select id="getVideoesByTagId" parameterClass="java.lang.Long"
		resultMap="Video">
		select id,name from w_video where id in (select video_id from
		w_video_tag where tag_id = #id#)
	</select>

	<select id="getTagStrongUser" resultMap="TagStrongUser"
		parameterClass="java.lang.Integer">
		select count(id) counttag,user_id from w_tags where status != 3
		group by user_id order by counttag desc limit 0,#size#
	</select>
	
	

</sqlMap>