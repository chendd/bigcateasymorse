                  <entry>NodeEvicted</entry>
               </row>
               <row>
                  <entry>org.jboss.cache.NodeLoaded</entry>
                  <entry>String : fqn</entry>
                  <entry>NodeLoaded</entry>
               </row>
               <row>
                  <entry>org.jboss.cache.NodeModifed</entry>
