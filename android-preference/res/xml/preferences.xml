<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
        xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:title="CheckBox">    
        <CheckBoxPreference
                android:key="checkbox_preference"
                android:title="title_toggle_preference"
                android:summary="summary_toggle_preference" />
            
    </PreferenceCategory>
                
    <PreferenceCategory
            android:title="对话框">

        <EditTextPreference
                android:key="EditText样式"
                android:title=" title_edittext_preference"
                android:summary=" summary_edittext_preference"
                android:dialogTitle=" dialog_title_edittext_preference" />
                
        <ListPreference
                android:key="List样式"
                android:title=" title_list_preference"
                android:summary=" summary_list_preference"
                android:entries="@array/entries_list_preference"
                android:entryValues="@array/entryvalues_list_preference"
                android:dialogTitle=" dialog_title_list_preference" />

    </PreferenceCategory>

    <PreferenceCategory
            android:title="开启新的intent">

        <PreferenceScreen
                android:title=" title_intent_preference"
                android:summary=" summary_intent_preference">

            <intent android:action="android.intent.action.VIEW"
                    android:data="http://bigcat.easymorse.com" />

        </PreferenceScreen>

    </PreferenceCategory>
    
    <PreferenceCategory
            android:title="依赖关系的checkbox">
    
        <CheckBoxPreference
                android:key="parent_checkbox_preference"
                android:title=" title_parent_preference"
                android:summary=" summary_parent_preference" />

        <!-- The visual style of a child is defined by this styled theme attribute. -->
        <CheckBoxPreference
                android:key="child_checkbox_preference"
                android:dependency="parent_checkbox_preference"
                android:layout="?android:attr/preferenceLayoutChild"
                android:title=" title_child_preference"
                android:summary=" summary_child_preference" />
            
    </PreferenceCategory>
    
</PreferenceScreen>
