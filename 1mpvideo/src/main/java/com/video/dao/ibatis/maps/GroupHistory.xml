<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="GroupHistory">
	<typeAlias alias="GroupHistory" type="com.video.domain.GroupHistory" />

<resultMap id="GroupHistory" class="GroupHistory" groupBy="id">
	
		<result property="visiter.id" column="visiter_id" />
		<result property="group.id" column="group_id" />
		
	</resultMap>


	<resultMap id="GroupHistoryJoinMap" class="GroupHistory" groupBy="id">
	
		<result property="visiter.id" column="u.id" />
		<result property="visiter.realName" column="u.realname" />
		<result property="visiter.face" column="u.face" />
		<result property="visiter.signature" column="u.signature" />
		<result property="visitDate" column="h.visit_date" />
		
	</resultMap>
	<select id="countGroupHistory" parameterClass="com.video.util.Pagination" resultClass="int">
	select count(*) from w_group_history 
	<dynamic prepend="where">
		<isNotEmpty property="condition.group.id" prepend="and">
				group_id = #condition.group.id#
			</isNotEmpty>
		
		
		</dynamic>
	
	</select>
	<select id="getGroupHistories" parameterClass="com.video.util.Pagination" resultMap="GroupHistoryJoinMap">
	select h.visit_date,u.id,u.realname,u.signature,u.face from w_group_history h left join users u on u.id = h.visiter_id 
	 <dynamic prepend="where">
		<isNotEmpty property="condition.group.id" prepend="and">
				h.group_id = #condition.group.id#
			</isNotEmpty>
		
		
		</dynamic>
	order by h.visit_date desc 
	limit #startIndex#,#size#
	</select>
	
	<insert id="createGroupHistory" parameterClass="GroupHistory">
	insert into w_group_history(visit_date,group_id,visiter_id) values(#visitDate#,#group.id#,#visiter.id#)
	</insert>
	
	<update id="updateGroupHistory" parameterClass="GroupHistory">
	update w_group_history set visit_date=#visitDate# where group_id=#group.id# and visiter_id=#visiter.id#
	</update>
	
	<select id="getGroupHistory" parameterClass="GroupHistory" resultMap="GroupHistory">
	select visiter_id,group_id from w_group_history where visiter_id = #visiter.id# and group_id = #group.id#
	
	</select>
	
	<delete id="deleteGroupHistoryByGoupId" parameterClass="java.lang.Long">
	delete from w_group_history where group_id =#value#
	</delete>

</sqlMap>