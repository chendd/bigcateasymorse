<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="SystemNotice">
	<typeAlias alias="SystemNotice" type="com.video.domain.SystemNotice" />
	<resultMap id="SystemNotice" class="SystemNotice">
		<result property="id" column="id" />
		<result property="sendDate" column="send_date" />
		<result property="title" column="title" />
		<result property="message" column="message" />
		<result property="status" column="status" />
		<result property="user.id" column="user_id" />
		<result property="module.id" column="object_id" />
		<result property="type" column="type" />
	</resultMap>
	<resultMap id="SystemNoticeJoin" class="SystemNotice">
		<result property="id" column="s.id" />
		<result property="sendDate" column="s.send_date" />
		<result property="title" column="s.title" />
		<result property="message" column="s.message" />
		<result property="status" column="s.status" />
		<result property="user.id" column="u.id" />
		<result property="user.realName" column="u.realname" />
		<result property="user.face" column="u.face" />
		<result property="module.id" column="s.object_id" />
		<result property="type" column="s.type" />
	</resultMap>
	
<insert id="createSystemNotice" parameterClass="SystemNotice">
insert into w_system_notices(send_date,title,message,status,user_id,object_id,type) values(#sendDate#,#title#,#message#,#status#,#user.id#,#module.id#,#type#)

</insert>
<update id="updateSystemNotice" parameterClass="SystemNotice">
update w_system_notices set send_date=#sendDate#,title=#title#,message=#message#,status=#status#,user_id=#user.id#,object_id=#module.id#,type=#type# 
<dynamic prepend="where">
			<isNotEmpty property="type" prepend="and">
		  type = #type# 
			</isNotEmpty>
			<isNotEmpty property="user.id" prepend="and">
		  user_id = #user.id#
			</isNotEmpty>
			<isNotEmpty property="module.id" prepend="and">
		 object_id = #module.id#
			</isNotEmpty>
			
		
		</dynamic>
</update>

<update id="updateSystemNoticeById" parameterClass="SystemNotice">
update w_system_notices set status=#status# where id = #id#
</update>

<select id="countSystemNoticesByUserId" parameterClass="com.video.util.Pagination" resultClass="int">
select count(id) from w_system_notices 
<dynamic prepend="where">
			<isNotEmpty property="condition.user.id" prepend="and">
		  user_id = #condition.user.id# 
			</isNotEmpty>
			
		
		</dynamic>


</select>
<select id="getSystemNoticesByUserId" parameterClass="com.video.util.Pagination" resultMap="SystemNotice">
select id,send_date,title,message,status,user_id,object_id,type from w_system_notices 
<dynamic prepend="where">
			<isNotEmpty property="condition.user.id" prepend="and">
  user_id = #condition.user.id# 
			</isNotEmpty>
			
		
		</dynamic>
order by send_date desc
</select>

<select id="getSystemNoticeById" parameterClass="java.lang.Long" resultMap="SystemNoticeJoin">
select s.id,s.send_date,s.title,s.message,s.status,u.id,u.realname,u.face,s.object_id,s.type from w_system_notices s left join users u on s.user_id = u.id where s.id = #value#
</select>

<delete id="deleteSystemNoticeById" parameterClass="java.lang.Long">
delete from w_system_notices where id = #value#
</delete>

<select id="countNewNotice" parameterClass="java.lang.Long" resultClass="int">
	select count(id) from w_system_notices where user_id = #value# and status = 0
	
	</select>


	
	
	
	</sqlMap>