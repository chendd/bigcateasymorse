<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd">
<sqlMap namespace="DailyComment">
	<typeAlias alias="DailyComment" type="com.video.domain.DailyComment" />
	<resultMap id="DailyComment" class="DailyComment">
		<result property="id" column="id" />
		<result property="addDate" column="add_date" />
		<result property="comment" column="comment" />
		<result property="daily.id" column="daily_id" />
		<result property="user.id" column="user_id" />

	</resultMap>
	<resultMap id="DailyCommentJoin" class="DailyComment">
		<result property="id" column="c.id" />
		<result property="addDate" column="c.add_date" />
		<result property="comment" column="c.comment" />
		<result property="user.id" column="u.id" />
		<result property="user.realName" column="u.realname" />
		<result property="user.face" column="u.face" />
	</resultMap>
	
	
	
	<select id="countDailyComments" parameterClass="com.video.util.Pagination" resultClass="int">
	select count(id) from w_daily_comments 
	<dynamic prepend="where">
			<isNotEmpty property="condition.daily.id" prepend="and">
				daily_id = #condition.daily.id#</isNotEmpty>
		</dynamic>
	</select>
	
	<select id="getDailyComments" parameterClass="com.video.util.Pagination" resultMap="DailyCommentJoin">
	select c.id,c.add_date,c.comment,u.id,u.realname,u.face from w_daily_comments c left join users u on c.user_id =u.id 
	<dynamic prepend="where">
			<isNotEmpty property="condition.daily.id" prepend="and">
				c.daily_id = #condition.daily.id#</isNotEmpty>
		</dynamic>
		order by c.add_date desc
		limit #startIndex#,#size#
	
	</select>
	
	<insert id="createDailyComment" parameterClass="DailyComment">
	insert into w_daily_comments(add_date,comment,user_id,daily_id) values(#addDate#,#comment#,#user.id#,#daily.id#)
	
	</insert>
	
	<delete id="deleteDailyCommentById" parameterClass="java.lang.Long">
	delete from w_daily_comments where id = #value#
	
	</delete>
	
	<delete id="deleteDailyCommentByDailyId" parameterClass="java.lang.Long">
	delete from w_daily_comments where daily_id = #value#
	
	</delete>
	
	
	
	
	
	
	
	
	</sqlMap>